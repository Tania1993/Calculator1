import java.lang.*;
import java.util.*;

public class array {
    public String arr;
    public Integer[] arrInt;
    Scanner sc = new Scanner(System.in);

  public String EnterArray(){
        System.out.println("Enter elements of array");
        arr = sc.nextLine();
        return arr;
    }

    public Integer[] RewriteArray() throws NumberFormatException{
        String[] str = arr.split(",");
        arrInt = new Integer[str.length];
        for (int i = 0; i < str.length; i++){
            arrInt[i] = Integer.valueOf(str[i].trim());
            if ((arrInt[i] > Integer.MAX_VALUE) || arrInt[i] < Integer.MIN_VALUE) {
                throw new NumberFormatException();
            }
        }
        System.out.println(Arrays.toString(str));
        return arrInt;
    }

    public Integer[] Sort_Array() {
        Arrays.sort(arrInt);
        return  arrInt;
    }

    public void PrintArray(){
        System.out.println("Sort array " + Arrays.toString(arrInt));
    }

    public static void main(String [] args){
        array object = new array();
        object.EnterArray();
        try {
            object.RewriteArray();
        }catch (NumberFormatException e){
            System.err.println("Number format exception!");
        }
        object.Sort_Array();
        object.PrintArray();
    }
}


