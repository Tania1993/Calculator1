package com.study.calculator;
import java.util.*;
import java.math.*;
import java.lang.*;
import java.text.*;

/**
 * Created by Таня on 05.03.2015.
 */

public class Calculator {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        if (args.length != 3) {
            System.err.println("Enter two values and operand");
        }
        double first = Double.parseDouble(args[0]);
        String operator = args[1];
        double second = Double.parseDouble(args[2]);
        double result;
        if ((first > Double.MAX_VALUE) || (first < Double.MIN_VALUE) || (second > Double.MAX_VALUE) || (second < Double.MIN_VALUE))
            System.err.println("Incorrect value");
        result = arithmetic(first, operator, second);

    }

    public static double arithmetic(double first, String operator, double second) {
        double result;
        if (operator.equals("add")) {
            result = first + second;

        } else if (operator.equals("sub")) {
            result = first - second;

        } else if (operator.equals("mul")) {
            result = first * second;

        } else if (operator.equals("div")) {
            if (second == 0)
                System.err.println("Attempt divide zero");
            else
                result = first / second;

        } else if (operator.equals("left")) {
            if (second == 0)
                System.err.println("Attempt divide zero");
            else
                result = first % second;

        } else {
            System.out.println("Invalid operator");
        }
    return 0.0;
    }
}

